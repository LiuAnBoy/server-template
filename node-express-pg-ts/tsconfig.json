{
  "compilerOptions": {
    /* 編譯輸出 */
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,

    /* 模組解析 */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* 路徑別名 */
    "baseUrl": ".",

    /* 嚴格模式 */
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
